<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="almeida.john.vocabnote.almieda.john.fragments.ChatbotsmenuFragment">

    <ImageView
        android:id="@+id/tile_picture"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tile_height"
        android:background="@drawable/politeconvo"
        android:scaleType="centerCrop" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/tile_picture"
        android:layout_marginTop="167dp"
        android:gravity="bottom">


        <Button
            android:id="@+id/play"
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/about"
            android:background="@drawable/button"
            android:elevation="20dp"
            android:text="@string/play_caps"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/about"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/play"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/button"
            android:elevation="20dp"
            android:text="@string/about_chatbot"
            android:textColor="#C0FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/instr"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:background="@drawable/button"
            android:elevation="20dp"
            android:text="@string/instructions_caps"
            android:textColor="#C0FFFFFF"
            android:textStyle="bold" />


    </RelativeLayout>


</FrameLayout>
